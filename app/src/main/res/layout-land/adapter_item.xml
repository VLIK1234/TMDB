<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="@dimen/card_corner"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="@dimen/w185_width"
            android:layout_height="@dimen/w185_height"
            android:layout_marginTop="8dp"
            android:background="@drawable/w185"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/poster_description"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_adapter_margin"
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/date_left_margin"
            android:layout_marginStart="@dimen/date_right_margin"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/date_size"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rating_margin"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/rating_text_size"
            android:textStyle="normal"/>

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:stepSize="0.1"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v7.widget.CardView>



