<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/poster_container"
                android:layout_width="@dimen/w342_width"
                android:layout_height="@dimen/w342_height"
                android:layout_margin="@dimen/border_margin">

                <ImageView
                    android:id="@+id/no_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/no_poster"
                    android:scaleType="centerCrop"
                    android:src="@drawable/w342" />

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/poster_description"
                    android:scaleType="centerCrop" />

                <Button
                    android:id="@+id/trailer_button"
                    android:layout_width="@dimen/trailer_button_width"
                    android:layout_height="@dimen/trailer_button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_play_arrow"
                    android:onClick="onClick"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/right_margin"
                android:layout_marginLeft="@dimen/left_margin"
                android:layout_marginRight="@dimen/right_margin"
                android:layout_marginStart="@dimen/left_margin"
                android:layout_marginTop="@dimen/top_margin"
                android:layout_toEndOf="@id/poster_container"
                android:layout_toRightOf="@id/poster_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_text_margin"
                    android:layout_marginTop="@dimen/space_text_margin"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/second_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_text_margin"
                    android:layout_marginTop="@dimen/space_text_margin"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/second_text_size" />

                <TextView
                    android:id="@+id/runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_text_margin"
                    android:layout_marginTop="@dimen/space_text_margin"
                    android:textSize="@dimen/second_text_size" />

                <TextView
                    android:id="@+id/tagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_text_margin"
                    android:layout_marginTop="@dimen/space_text_margin"
                    android:lineSpacingMultiplier="1.0"
                    android:textSize="@dimen/second_text_size" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rating_view"
                        android:layout_width="@dimen/size_big_star"
                        android:layout_height="@dimen/size_big_star">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/no_poster"
                            android:scaleType="centerCrop"
                            android:src="@drawable/star_big" />

                        <TextView
                            android:id="@id/rating_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/rating_pic_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/left_star_margin"
                        android:layout_marginStart="@dimen/left_star_margin"
                        android:layout_toEndOf="@id/rating_view"
                        android:layout_toRightOf="@id/rating_view" />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_margin="@dimen/border_margin"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/second_text_size" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/overview"
        android:background="@color/divider" />
</RelativeLayout>