<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/crew_profile_width"
              android:layout_height="@dimen/crew_item_height"
              android:layout_margin="2dp"
              android:orientation="vertical"
              tools:showIn="@layout/fragment_detail">

    <RelativeLayout
        android:layout_width="@dimen/crew_profile_width"
        android:layout_height="@dimen/crew_profile_height">

        <ImageView
            android:id="@+id/iv_profile_crew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description_profile"
            android:scaleType="centerCrop"
            tools:src="@drawable/no_avatar"/>

        <TextView
            android:id="@+id/tv_name_crew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_with_alpha"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            tools:text="Marcelio Gonsales"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_charter_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        tools:text="as Long wolf"/>
</LinearLayout>